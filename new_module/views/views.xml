<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="new_module.list">
      <field name="name">new_module list</field>
      <field name="model">new_module.new_module</field>
      <field name="arch" type="xml">
      <header>
                    <button
                        name="button_draft"
                        states="to_approve,approved,rejected,done"
                        string="Reset"
                        type="object"
                        groups="new_module.group_purchase_request_manager"
                    />
                    <button
                        name="button_to_approve"
                        states="draft"
                        string="Request approval"
                        type="object"
                        class="oe_highlight"
                    />
                    <button
                        name="button_approved"
                        states="to_approve"
                        string="Approve"
                        type="object"
                        class="oe_highlight"
                        groups="new_module.group_purchase_request_manager"
                    />
                    <button
                        name="%(action_purchase_request_line_make_purchase_order)d"
                        states="approved"
                        string="Create RFQ"
                        type="action"
                    />
                    <button
                        name="button_done"
                        states="approved"
                        string="Done"
                        type="object"
                        class="oe_highlight"
                        groups="new_module.group_purchase_request_manager"
                    />
                    <button
                        name="button_rejected"
                        states="to_approve,approved"
                        string="Reject"
                        type="object"
                        groups="new_module.group_purchase_request_manager"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,to_approve,approved,done,rejected"
                        statusbar_colors='{"approved":"blue"}'
                    />
                </header>
        <tree>
          <field name = "cliente"/>
          <field name = "rut_tributario"/>
          <field name = "folio_documento"/>
          <field name = "tipo_documento"/>
          <field name = "documento_id"/>
          <field name = "fecha_factura"/>
          <field name = "referencia_pago"/>
          <field name = "fecha_vencimiento"/>
          <field name = "plazo_pago"/>
          <field name = "diario"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="new_module.action_window">
      <field name="name">agregar nuevo dato</field>
      <field name="res_model">new_module.new_module</field>
      <field name="view_mode">tree,form</field>
      
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="new_module.action_server">
      <field name="name">zona de ajustes (proximamente)</field>
      <field name="model_id" ref="model_new_module_new_module"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Modulo pruebas" id="new_module.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu principal" id="new_module.menu_1" parent="new_module.menu_root"/>
    <menuitem name="Otros" id="new_module.menu_2" parent="new_module.menu_root"/>

    <!-- actions -->

    <menuitem name="Lista" id="new_module.menu_1_list" parent="new_module.menu_1"
              action="new_module.action_window"/>
    <menuitem name="Ajustes (proximamente)" id="new_module" parent="new_module.menu_2"
              action="new_module.action_server"/>

  </data>
</odoo>