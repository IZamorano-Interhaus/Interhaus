<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="new_module.proveedores_list_view">
      <field name="name">new_module list</field>
      <field name="model">new_module.proveedores</field>
      <field name="arch" type="xml">
        <tree>
          <field name = "name"/>
          <field name = "address"/>
          <field name = "l10n_cl_sii_activity_description"/>
          <field name = "l10n_cl_sii_taxpayer_type"/>
          <field name = "pruebas_id"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="new_module.pruebas_list_view">
      <field name="name">new_module list</field>
      <field name="model">new_module.pruebas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="partner_id"/>
          <field name="rut_tributario"/>
          <field name="folio_documento"/>
          <field name="codigo_documento"/>
          <field name="tipo_documento"/> 
          <field name="folio_documento"/>
          <field name="referencia_pago"/>
          <field name="trackId"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="new_module.compannia_list_view">
      <field name="name">new_module list</field>
      <field name="model">new_module.compannia</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre_compannia"/>
          <field name="direccion_compannia"/>
        </tree>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="new_module.proveedores_action_window">
      <field name="name">Agregar proveedor</field>
      <field name="res_model">new_module.proveedores</field>
      <field name="view_mode">tree,form</field>
      
    </record>    
    <record model="ir.actions.act_window" id="new_module.pruebas_action_window">
      <field name="name">Agregar borrador</field>
      <field name="res_model">new_module.pruebas</field>
      <field name="view_mode">tree,form</field>
      
    </record>
    <record model="ir.actions.act_window" id="new_module.compannia_action_window">
      <field name="name">Agregar compañia</field>
      <field name="res_model">new_module.compannia</field>
      <field name="view_mode">tree,form</field>
      
    </record>
    


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="new_module.pruebas_action_server">
      <field name="name">Zona de ajustes (proximamente)</field>
      <field name="model_id" ref="model_new_module_pruebas"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Modulo de pruebas" id="new_module.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Proveedores" id="new_module.proveedores_menu_1" parent="new_module.menu_root" action = "new_module.proveedores_action_window"/>
    <menuitem name="Factura electronica" id="new_module.pruebas_menu_2" parent="new_module.menu_root" action ="new_module.pruebas_action_window"/>
    <menuitem name="compañia" id="new_module.compannia_menu_3" parent="new_module.menu_root" action ="new_module.compannia_action_window"/>

    <!-- actions -->
    
    <menuitem name="Proveedores" id="new_module.proveedores_menu_1_list" parent="new_module.proveedores_menu_1"
              action="new_module.proveedores_action_window"/>
    <menuitem name="Factura electronica" id="new_module.pruebas_menu_2_list" parent="new_module.pruebas_menu_2"
              action="new_module.pruebas_action_window"/>
    <menuitem name="compañia" id="new_module.compannia_menu_3_list" parent="new_module.compannia_menu_3"
              action="new_module.compannia_action_window"/>

  </data>
</odoo>